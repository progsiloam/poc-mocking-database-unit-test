{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "experimentalDecorators": true,
    "module": "commonjs",
    "typeRoots": ["app/@types", "node_modules/@types"],
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": true
  },
  "include": ["app"],
  "exclude": ["node_modules"]
}
